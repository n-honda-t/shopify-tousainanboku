{%- if section.blocks.size > 0 -%}
  <div>
    {% comment %} TODO: あとでcss指定 {% endcomment %}
    <div class="brand_list_wrap">
      {%- for block in section.blocks -%}
        <div class="justify-self-center detail-link-button-list">
          {%-
            render 'button',
            href: block.settings.collection.url,
            content: block.settings.collection.title,
          -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
{% endif %}

