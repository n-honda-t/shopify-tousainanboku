{%- if section.blocks.size > 0 -%}
  <p class="h2">{{ section.blocks.first.settings.title | default: section.blocks.first.settings.collection.title | default: 'Collection' }}</p>
  {%- for block in section.blocks -%}
    <div class="justify-self-center top-view-all-button">
      {%-
        render 'button',
        href: block.settings.collection.url,
        content: block.settings.collection.title
      -%}
    </div>
  {%- endfor -%}
{% endif %}

{%- schema -%}
  {
    "name": "Link-list",
    "settings": [
      {
        "type": "collection",
        "id": "title",
        "label": "t:sections.featured_collections.blocks.collection.collection"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "t:sections.featured_collections.blocks.collection.name",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "t:sections.featured_collections.blocks.collection.collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Link-list",
        "blocks": [
          {
            "type": "collection"
          }
        ]
      }
    ]
  }
{% endschema %}

